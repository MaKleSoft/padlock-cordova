<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maklesoft.padlock" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Padlock</name>
    <description>
    </description>
    <author email="contact@maklesoft.com" href="http://maklesoft.com">
        MaKleSoft
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
    <platform name="android">
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/app-icon-60.png" width="60" height="60" />
        <icon src="res/ios/app-icon-120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/app-icon-76.png" width="76" height="76" />
        <icon src="res/ios/app-icon-152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/app-icon-40.png" width="40" height="40" />
        <icon src="res/ios/app-icon-80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/app-icon-57.png" width="57" height="57" />
        <icon src="res/ios/app-icon-114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/app-icon-72.png" width="72" height="72" />
        <icon src="res/ios/app-icon-144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/app-icon-29.png" width="29" height="29" />
        <icon src="res/ios/app-icon-58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/app-icon-50.png" width="50" height="50" />
        <icon src="res/ios/app-icon-100.png" width="100" height="100" />
    </platform>
</widget>
