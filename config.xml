<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maklesoft.padlock" version="0.10.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Padlock</name>
    <description>
    </description>
    <author email="contact@maklesoft.com" href="http://maklesoft.com">
        MaKleSoft
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="android">
        <icon density="ldpi" src="res/android/icon/app-icon-ldpi.png" />
        <icon density="mdpi" src="res/android/icon/app-icon-mdpi.png" />
        <icon density="hdpi" src="res/android/icon/app-icon-hdpi.png" />
        <icon density="xhdpi" src="res/android/icon/app-icon-xhdpi.png" />
        <icon density="xxhdpi" src="res/android/icon/app-icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/icon/app-icon-xxxhdpi.png" />

        <splash src="res/android/splash/splash-ldpi.png" density="land-ldpi"/>
        <splash src="res/android/splash/splash-mdpi.png" density="land-mdpi"/>
        <splash src="res/android/splash/splash-hdpi.png" density="land-hdpi"/>
        <splash src="res/android/splash/splash-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/android/splash/splash-xxhdpi.png" density="land-xxhdpi"/>
        <splash src="res/android/splash/splash-xxxhdpi.png" density="land-xxxhdpi"/>
        <splash src="res/android/splash/splash-ldpi.png" density="port-ldpi"/>
        <splash src="res/android/splash/splash-mdpi.png" density="port-mdpi"/>
        <splash src="res/android/splash/splash-hdpi.png" density="port-hdpi"/>
        <splash src="res/android/splash/splash-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/android/splash/splash-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="res/android/splash/splash-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <icon height="60" src="res/ios/icon/app-icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon/app-icon-120.png" width="120" />
        <icon height="180" src="res/ios/icon/app-icon-180.png" width="180" />
        <icon height="76" src="res/ios/icon/app-icon-76.png" width="76" />
        <icon height="152" src="res/ios/icon/app-icon-152.png" width="152" />
        <icon height="40" src="res/ios/icon/app-icon-40.png" width="40" />
        <icon height="80" src="res/ios/icon/app-icon-80.png" width="80" />
        <icon height="57" src="res/ios/icon/app-icon-57.png" width="57" />
        <icon height="114" src="res/ios/icon/app-icon-114.png" width="114" />
        <icon height="72" src="res/ios/icon/app-icon-72.png" width="72" />
        <icon height="144" src="res/ios/icon/app-icon-144.png" width="144" />
        <icon height="29" src="res/ios/icon/app-icon-29.png" width="29" />
        <icon height="58" src="res/ios/icon/app-icon-58.png" width="58" />
        <icon height="50" src="res/ios/icon/app-icon-50.png" width="50" />
        <icon height="100" src="res/ios/icon/app-icon-100.png" width="100" />

        <splash src="res/ios/splash/splash-320x480.png" width="320" height="480"/>
        <splash src="res/ios/splash/splash-640x960.png" width="640" height="960"/>
        <splash src="res/ios/splash/splash-768x1024.png" width="768" height="1024"/>
        <splash src="res/ios/splash/splash-1536x2048.png" width="1536" height="2048"/>
        <splash src="res/ios/splash/splash-1024x768.png" width="1024" height="768"/>
        <splash src="res/ios/splash/splash-2048x1536.png" width="2048" height="1536"/>
        <splash src="res/ios/splash/splash-640x1136.png" width="640" height="1136"/>
        <splash src="res/ios/splash/splash-750x1334.png" width="750" height="1334"/>
        <splash src="res/ios/splash/splash-1242x2208.png" width="1242" height="2208"/>
        <splash src="res/ios/splash/splash-2208x1242.png" width="2208" height="1242"/>
    </platform>
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
</widget>
