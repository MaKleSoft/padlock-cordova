<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maklesoft.padlock" version="0.10.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Padlock</name>
    <description>
    </description>
    <author email="contact@maklesoft.com" href="http://maklesoft.com">
        MaKleSoft
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="android">
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="60" src="res/ios/app-icon-60.png" width="60" />
        <icon height="120" src="res/ios/app-icon-120.png" width="120" />
        <icon height="76" src="res/ios/app-icon-76.png" width="76" />
        <icon height="152" src="res/ios/app-icon-152.png" width="152" />
        <icon height="40" src="res/ios/app-icon-40.png" width="40" />
        <icon height="80" src="res/ios/app-icon-80.png" width="80" />
        <icon height="57" src="res/ios/app-icon-57.png" width="57" />
        <icon height="114" src="res/ios/app-icon-114.png" width="114" />
        <icon height="72" src="res/ios/app-icon-72.png" width="72" />
        <icon height="144" src="res/ios/app-icon-144.png" width="144" />
        <icon height="29" src="res/ios/app-icon-29.png" width="29" />
        <icon height="58" src="res/ios/app-icon-58.png" width="58" />
        <icon height="50" src="res/ios/app-icon-50.png" width="50" />
        <icon height="100" src="res/ios/app-icon-100.png" width="100" />
    </platform>
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
</widget>
